else:
    print('Elemento nao encontrado!')


# RANGE

for v in range(10):
    print(v)

for v in range(5, 20): #começa a partir do 5
    print(v)
    
# RANGE
for t in range(3, 33, 3): #imprinindo sequencia de 3 em 3 até chegar o final do range
    print(t, end='')
    print()

# transnformação de range em lista

L = list(range(100, 1100, 50))
print(L)


# ENUMERATE
L = [5, 9, 13]
x = 0
for e in L:
    print(f'[{x}] {e}')
    x += 1

L = [5, 9, 13]
for x, e in enumerate(L):
    print(f'[{x}] {e}')


# verificação do maior valor

L = [1, 7, 2, 4]
maximo = L[0]
for e in L:
    if e > maximo:
        maximo = e
print(maximo)


# PROGRMA DE COPIA DE ELEMENTOS PARA OUTRAS LISTAS

V = [9, 8, 7, 12, 0, 13, 21]
P = []
I = []
for e in V:
    if e % 2 == 0:
        P.append(e)
    else:
        I.append(e)
print('pares', P)
print('impares', I)

# PROGRMA DE CONTROLE DA UTILIZAÇÃO DE SALAS DE UM CINEMA
lugares_vagos = [10, 2, 1, 3, 0]
while True:
    sala = int(input('Sala (0 sai): '))
    if sala == 0:
        print('Fim')
        break
    if sala > len(lugares_vagos) or sala < 1:
        print('Sala invalida!')
    elif lugares_vagos[sala - 1] == 0:
        print('Desculpe Sala Lotada!')
    else:
        lugares = int(
            input(f'Quantos Lugares voce deseja ({lugares_vagos[sala - 1]}) vagos: '))
        if lugares > lugares_vagos[sala - 1]:
            print('Esse numero de lugares nao esta disponivel.')
        elif lugares < 0:
            print('Numero invalido!')
        else:
            lugares_vagos[sala - 1] -= lugares
            print(f'{lugares} lugares vendidos')
print('Utilização das salas')
for x, l in enumerate(lugares_vagos):
    print(f'Sala {x + 1} - {l} lugar(es) vazio(s)')

# LISTAS COM STRINGS

# PROGRAMA QUE LE E IMPRIME UMA LISTA DE COMPRAS
compras = []
while True:
    produto = input('Produto: ')
    if produto == 'fim':
        break
    compras.append(produto)
for p in compras:
    print(p)
















































